{
    "compileOnSave": true,
    "compilerOptions": {
        "types": [
            "node"
        ],
        "declaration": true,
        "alwaysStrict": true,
        "esModuleInterop": true,
        "moduleResolution": "Node",
        "module": "ESNext",
        "newLine": "lf",
        "preserveConstEnums": true,
        "removeComments": false,
        "target": "ESNext",
        "incremental": true,
        "baseUrl": "./",
        "pretty": true,
        "resolveJsonModule": true,
        "paths": {
            "@utils/*": [
                "./src/utils/*"
            ],
            "@managers/*": [
                "./src/managers/*"
            ],
            "@structures/*": [
                "./src/structures/*"
            ]
        },
    },
    "ts-node": {
        "files": true
    },
    "include": [
        "src",
        "./*.ts",
        "./.eslintrc.js",
        "lint-staged.config.js"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}