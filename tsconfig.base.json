{
    "compileOnSave": true,
    "compilerOptions": {
        "types": [
            "node"
        ],
        "declaration": true,
        "alwaysStrict": true,
        "charset": "UTF-8",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "module": "ESNext",
        "newLine": "lf",
        "preserveConstEnums": true,
        "removeComments": false,
        "target": "ESNext",
        "incremental": true,
        "baseUrl": "./",
        "pretty": true,
        "resolveJsonModule": true,
        "paths": {
            "@utils/*": ["./src/utils/*"],
            "@managers/*": ["./src/managers/*"],
            "@structures/*": ["./src/structures/*"]
        },
    },
    "ts-node": {
        "files": true
    },
    "include": ["src", "./*.ts"],
    "exclude": ["node_modules", "lib"]
}