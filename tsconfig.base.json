{
    "compileOnSave": true,
    "compilerOptions": {
        "declaration": true,
        "alwaysStrict": true,
        "charset": "UTF-8",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "module": "commonjs",
        "newLine": "lf",
        "preserveConstEnums": true,
        "removeComments": false,
        "target": "ES2021",
        "incremental": true,
        "baseUrl": "./",
        "pretty": true,
        "resolveJsonModule": true,
        "paths": {
            "@utils/*": ["./src/utils/*"],
        },
        "typeRoots": ["./global.d.ts"]
    },
    "ts-node": {
        "files": true
    },
    "include": ["src/*", "./*.ts"],
    "exclude": ["node_modules", "lib"]
}