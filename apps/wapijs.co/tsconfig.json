{
	"extends": "@wapijs/typescript-config/next.base.json",
	"compilerOptions": {
		"paths": {
			"~/*": ["./src/*"],
			"root/*": ["./*"],
			"contentlayer/generated/*": ["./.contentlayer/generated/*"]
		},
		"baseUrl": "."
	},
	"include": [
		"next-env.d.ts",
		"next.config.js",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts",
		"tailwind.config.js",
		"prettier.config.js",
		".eslintrc.js"
, "contentlayer.config.js"	],
	"exclude": ["node_modules"]
}
