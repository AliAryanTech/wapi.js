{
	"extends": "@wapijs/typescript-config/next.base.json",
	"compilerOptions": {
		"paths": {
			"~/*": ["./src/*"],
			"root/*": ["./*"],
			"@microsoft/tsdoc/schemas/tsdoc.schema.json": [
				"./node_modules/@microsoft/tsdoc/schemas/tsdoc.schema.json"
			]
		}
	},
	"include": [
		"next-env.d.ts",
		"next.config.js",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts",
		"tailwind.config.js",
		"prettier.config.js",
		".eslintrc.js"
	],
	"exclude": ["node_modules"]
}
